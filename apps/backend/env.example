# Database Configuration
DATABASE_URL=postgresql://caelo_user:caelo_password@localhost:5432/caelo
# Alternative for development: sqlite:///./caelo.db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# File Storage
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@caelo.com

# External API Keys (for future integrations)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=development  # development, staging, production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development Settings
DEBUG=true
TESTING=false

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://login.withcaelo.ai

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2 